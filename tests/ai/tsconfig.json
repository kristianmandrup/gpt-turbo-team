{
    "compilerOptions": {
      "target": "es2018",
      "module": "commonjs",
      "outDir": "dist",
      "strict": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "declaration": true,
      "sourceMap": true,
      "forceConsistentCasingInFileNames": true,
      "types": ["node", "jest"]
    },
    "include": ["src"],
    "exclude": ["dist", "node_modules"]
  }